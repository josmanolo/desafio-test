<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Product mock</title>
  </head>
  <body>
    <div class='jumbotron'>
      <h1>Vista de Productos</h1>
      <hr />

      {{#if existProducts}}
        <div class='table-responsive'>
          <table class='table table-dark mt-2'>
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Foto</th>
            </tr>
            {{#each products}}
              <tr>
                <td>{{this.title}}</td>
                <td>$ {{this.price}}</td>
                <td><img
                    width='50'
                    src={{this.thumbnail}}
                    alt='not found'
                  /></td>
              </tr>
            {{/each}}
          </table>
        </div>
      {{/if}}
    </div>
  </body>
</html>
